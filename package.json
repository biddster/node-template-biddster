{
    "name": "node-template-biddster",
    "version": "0.1.0",
    "description": "Template for node apps",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "test": "nyc --reporter=html --reporter=text node_modules/.bin/mocha -R spec ./test/**.js",
        "update-dependencies": "./node_modules/.bin/ncu -a && npm install"
    },
    "author": "@biddster",
    "license": "ISC",
    "devDependencies": {
        "eslint": "^5.14.1",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^4.0.0",
        "eslint-plugin-import": "^2.16.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.4",
        "mocha": "^6.0.1",
        "npm-check-updates": "^2.15.0",
        "nyc": "^13.3.0",
        "prettier": "^1.16.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "node": true,
            "mocha": true
        },
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "overrides": [
            {
                "files": [
                    "*.js"
                ],
                "rules": {
                    "func-names": "off",
                    "max-lines-per-function": "off",
                    "global-require": "off",
                    "no-plusplus": "off",
                    "no-param-reassign": "off",
                    "no-console": "off",
                    "no-multi-assign": "off"
                }
            }
        ]
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 96
    },
    "nyc": {
        "exclude": "test/**"
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "eslint",
            "git add"
        ],
        "*.{md,html,json}": [
            "prettier --write",
            "git add"
        ]
    }
}
